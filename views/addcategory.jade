extends layout

block content
  if errors
    ul.errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  .row
    .col-md-1
    .col-md-10
      .panel.panel-primary
        .panel-heading
          h1.text-center=title
        .panel-body
          form(method='POST', action='/categories/add')
            .formgroup
              label Title:
              input.form-control(name='title', type="text")
            br
            p.text-center
              input.btn.btn-primary(name="submit", type="submit", value="save")

      each category, i in categories
        .well.text-center(style="font-weight: 600") #{category.title}
          a.pull-right.btn.btn-danger.btn-sm(href = '/categories/delete/#{category._id}')  DELETE
