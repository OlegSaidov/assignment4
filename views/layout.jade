doctype html
html
  head
    title Touro Blog
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(href='/stylesheets/style.css', rel='stylesheet')

    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js")
    script(src="/javascripts/bootstrap.js")

  body
    .container-fluid
      img.logo(src='/images/logo.png',width="100%",height="250px")
      .navbar.navbar-inverse
          .container
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .navbar-collapse.collapse
              ul.nav.navbar-nav
                li
                  a(href="/") Home
                li
                  a(href="/posts/add") Add Post
                li
                  a(href="/categories/add") Add category
    .container
      !=messages()
      block content
      br
    .container-fluid.well
      footer.bg-dark
        p.text-center Touro Blog &copy; 2018
    script(src='/javasripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
